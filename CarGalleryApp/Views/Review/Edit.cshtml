@model YipRestaurantApp.Models.Review

@{
    ViewData["Title"] = "Edit";
}


<div class="col-md-6 text-center">

    <h1>Edit Review</h1>
    <hr />

    <div class="container-fluid">

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Brand" class="control-label">Restaurant</label>
                <input asp-for="Brand" class="form-control"/>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Date</label>
                <input asp-for="Model" class="form-control"/>
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label">Rating(1-5)</label>
                <input asp-for="Year" class="form-control"/>
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Comments</label>
                <input asp-for="Price" class="form-control"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Person.FirstName" class="control-label">Reviewer</label>
                <input asp-for="Person.FirstName" class="form-control" readonly/>
                <span asp-validation-for="Person.FirstName" class="text-danger"></span>
                @Html.HiddenFor(m=>m.Person.Password)  @*Had to use Html Hidden to attach Password to Model, it was not being passed to Controller and dropping out of the DB in Atlas*@
            </div>
            <br />
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success"/>
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
            <br />
            <br />
        </form>

    </div>
</div>






















@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
